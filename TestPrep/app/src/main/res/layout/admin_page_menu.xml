<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:name="com.jung.min.testprep.HeaderFrag"
            android:id="@+id/fragment3"
            tools:layout="@layout/fragement_header" />
    </FrameLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Student"
            android:id="@+id/btnAddStudent"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"

            android:contextClickable="false"
            android:clickable="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Grade"
            android:id="@+id/btnAddGrade"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:layout_column="1"
            android:layout_weight="1"
            android:visibility="visible" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Teacher"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:id="@+id/btnAddTeacher"
            android:layout_column="2"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List Student"
            android:id="@+id/btnListStudent"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List Grade"
            android:id="@+id/btnListGrade"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_column="1"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List Teacher"
            android:id="@+id/btnListTeacher"
            android:layout_marginRight="10dp"
            android:layout_column="2"
            android:layout_weight="1" />
    </TableRow>

</TableLayout>